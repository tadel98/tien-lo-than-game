{
  "framework": "nuxtjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "env": {
    "PRISMA_GENERATE_DATAPROXY": "false"
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "functions": {
    "server/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["sin1"],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
