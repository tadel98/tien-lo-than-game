{
  "name": "tien-lo-than-game",
  "version": "1.0.0",
  "description": "Web game tu luyện với giao diện tương tự như hình ảnh",
  "private": true,
  "scripts": {
    "build": "node prisma/vercel-build.js && npx nuxt@3.8.0 build",
    "dev": "npx nuxt@3.8.0 dev",
    "generate": "npx nuxt@3.8.0 generate",
    "preview": "npx nuxt@3.8.0 preview",
    "postinstall": "npx prisma generate",
    "postbuild": "node scripts/vercel-postbuild.js",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:seed": "node scripts/seed.js",
    "db:reset": "npx prisma db push --force-reset && npm run db:seed"
  },
  "dependencies": {
    "@nuxt/devtools": "latest",
    "@nuxtjs/tailwindcss": "^6.8.4",
    "@pinia/nuxt": "^0.5.1",
    "@prisma/client": "^5.22.0",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nuxt": "^3.8.0",
    "pg": "^8.16.3",
    "pinia": "^2.1.7",
    "prisma": "^5.22.0",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.1"
  }
}
