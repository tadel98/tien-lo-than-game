{
  "name": "tien-lo-than-game",
  "version": "1.0.0",
  "description": "Web game tu luyện với giao diện tương tự như hình ảnh",
  "private": true,
  "scripts": {
    "build": "npx prisma generate && npx nuxt@3.7.4 build",
    "vercel-build": "npx prisma generate && npx nuxt@3.7.4 build",
    "dev": "npx nuxt@3.7.4 dev",
    "generate": "npx nuxt@3.7.4 generate",
    "preview": "npx nuxt@3.7.4 preview",
    "postinstall": "npx prisma generate || echo 'Prisma generate failed but continuing'",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:seed": "node scripts/seed-all-game-data.js",
    "db:seed-quests": "node scripts/seed-comprehensive-quests-fixed.js",
    "db:cleanup": "node scripts/cleanup-database.js",
    "deploy:check": "node scripts/check-deploy.js",
    "deploy:preview": "vercel --prod",
    "deploy:production": "vercel --prod --confirm",
    "deploy:now": "node scripts/deploy-now.js",
    "deploy:delayed": "node scripts/deploy-delayed.js",
    "deploy:5h": "node scripts/auto-deploy.js",
    "deploy:custom": "node scripts/deploy-delayed.js",
    "start": "node .output/server/index.mjs",
    "railway:start": "node .output/server/index.mjs",
    "deploy:railway": "railway up"
  },
  "dependencies": {
    "@nuxt/devtools": "latest",
    "@nuxtjs/tailwindcss": "^6.8.4",
    "@pinia/nuxt": "^0.5.1",
    "@prisma/client": "^5.22.0",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nuxt": "3.7.4",
    "pg": "^8.16.3",
    "pinia": "^2.1.7",
    "prisma": "^5.22.0",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.1"
  }
}
